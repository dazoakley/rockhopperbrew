@charset 'utf-8';

@import "bootstrap/bootstrap-sprockets"; @import "bootstrap/bootstrap";
@import "font-awesome/font-awesome-sprockets"; @import "font-awesome/font-awesome";

$text-color:                #333;
$black-color:               #3e3e3e;
$yellow-color:              #fbd007;
$grey-color:                #e0e0e0;
$dark-grey-color:           #777;
$white-text-on-black-color: #fff;

body {
  color: $text-color;
  font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial;
}

h1, h2, h3, h4, h5, h6 {
  font-family: Signika, 'Helvetica Neue', Helvetica, Arial;
}

#site-header {
  padding-bottom: 40px;
}

.content {
  min-height: 250px;
}

.leader {
  background-image: url({{ 'photos/2016/07/the-brewhouse.jpg' magick:1/2 | asset_path }});
  background-size: cover;
  height: 600px;
  border-radius: 5px;
}

.leader-inner {
  padding: 20px;
  margin-top: 190px;
  border-radius: 5px;
  color: #fff;
  text-align: center;
  background-color:rgba(0, 0, 0, 0.6);
}

.leader-inner p {
  margin: 15px;
}

.beer-variation-label {
  font-family: Signika, 'Helvetica Neue', Helvetica, Arial;
  font-size: 120%;
}

img.max-height-300 {
  max-height: 300px;
}

/* Small devices (tablets, 768px and up) */
@media (min-width: 768px) {
  body {
    border-top: 5px solid $black-color;
    padding-top: 10px;
  }
}

.stockists del a {
  color: grey;
}

// Import partials from `sass_dir` (defaults to `_sass`)
@import "logo_and_nav";
@import "footer";
@import "post_listing";
